@model Project.Models.KhachHang.KhachHangHomeViewModel

@{
    ViewData["Title"] = "Trang chủ Khách hàng";
}

<div class="container-fluid">
    <!-- Thanh ngang trên cùng -->
    <div class="row bg-primary text-white py-2">
        <div class="col-md-10">
            <h4 class="ms-3">Chào mừng, @Model.HoTen!</h4>
        </div>
        <div class="col-md-2 text-end">
            <a href="/Home/DangXuat" class="btn btn-light btn-sm me-3">Đăng xuất</a>
        </div>
    </div>

    <div class="row">
        <!-- Thanh chức năng bên trái -->
        <div class="col-md-3 bg-light vh-100">
            <h5 class="mt-3">Chức năng</h5>
            <ul class="list-group">
                
                    <a href="/KhachHang/ChonMay" class="text-decoration-none"><li class="list-group-item">Chọn máy</li></a>
                    <a href="/KhachHang/LichSu" class="text-decoration-none"> <li class="list-group-item">lịch sử sử dụng </li></a>
                    <a href="/KhachHang/NapTien" class="text-decoration-none"> <li class="list-group-item">Nạp tiền </li> </a>
                    <a href="/KhachHang/HoTro" class="text-decoration-none"><li class="list-group-item">Liên hệ hỗ trợ </li></a>         
            </ul>
        </div>
        <!-- Nội dung chính -->
        <div class="col-md-9">
            <div class="container mt-4">
                <h3>Thông tin tài khoản</h3>
                <div class="card mt-3">
                    <div class="card-header bg-primary text-white">
                        Thông tin cá nhân
                    </div>
                    <div class="card-body">
                        <p><strong>Họ và tên:</strong> @Model.HoTen</p>
                        <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
                        <p><strong>Số dư:</strong> @Model.SoDu VNĐ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>