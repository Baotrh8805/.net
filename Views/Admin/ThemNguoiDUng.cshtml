@model Project.Models.Admin.ThemNguoiDungViewModel

@{
    ViewData["Title"] = "Thêm người dùng";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 500px;">
        <h2 class="text-primary mb-4 text-center">Thêm người dùng</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post" action="/Admin/ThemNguoiDung">
            <div class="mb-3">
                <label for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                <input type="text" class="form-control" id="TenDangNhap" name="TenDangNhap" value="@Model.TenDangNhap" required />
            </div>

            <div class="mb-3">
                <label for="MatKhau" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="MatKhau" name="MatKhau" value="@Model.MatKhau" required />
            </div>

            <div class="mb-3">
                <label for="HoTen" class="form-label">Họ tên</label>
                <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required />
            </div>

            <div class="mb-3">
                <label for="SoDienThoai" class="form-label">Số điện thoại</label>
                <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" value="@Model.SoDienThoai" required />
            </div>


            <button type="submit" class="btn btn-primary w-100">Thêm người dùng</button>
            <a href="/Admin/QuanLyNguoiDung" class="btn btn-secondary w-100 mt-2">Hủy</a>
        </form>
    </div>
</div>