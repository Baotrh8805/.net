@model Project.Models.Admin.AdminHomeViewModel

@{
    ViewData["Title"] = "Trang chủ Quản trị viên";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid">
    <!-- Thanh ngang trên cùng -->
    <div class="row bg-primary text-white py-2">
        <div class="col-md-10">
            <h4 class="ms-3">Xin chào Quản trị viên @Model.HoTen</h4>
        </div>
        <div class="col-md-2 text-end">
            <a href="/Home/DangXuat" class="btn btn-light btn-sm me-3">Đăng xuất</a>
        </div>
    </div>

    <div class="row">
        <!-- Thanh chức năng bên trái -->
        <div class="col-md-3 bg-light vh-100">
            <h5 class="mt-3">Chức năng</h5>
            <ul class="list-group">
              <li class="list-group-item border-0">
                  <a href="/Admin/Home" class="menu-link text-decoration-none d-flex align-items-center">
                      <i class="bi bi-house-door-fill me-2 text-primary"></i> Home
                  </a>
              </li>
              <li class="list-group-item border-0">
                  <a href="/Admin/QuanLyNguoiDung" class="menu-link text-decoration-none d-flex align-items-center">
                      <i class="bi bi-people-fill me-2 text-success"></i> Quản lý người dùng
                  </a>
              </li>
              <li class="list-group-item border-0">
                  <a href="/Admin/QuanLyMayTinh" class="menu-link text-decoration-none d-flex align-items-center">
                      <i class="bi bi-pc-display-horizontal me-2 text-warning"></i> Quản lý máy tính
                  </a>
              </li>
              <li class="list-group-item border-0">
                  <a href="#" class="menu-link text-decoration-none d-flex align-items-center" data-bs-toggle="collapse" data-bs-target="#thongKeSubMenu" aria-expanded="false" aria-controls="thongKeSubMenu">
                      <i class="bi bi-bar-chart-fill me-2 text-danger"></i> Thống kê doanh thu
                      <i class="bi bi-chevron-down ms-auto"></i>
                  </a>
                  <ul class="collapse list-group ms-3 mt-2" id="thongKeSubMenu">
                      <li class="list-group-item border-0">
                          <a href="/Admin/ThongKeTheoThoiGian" class="submenu-link text-decoration-none d-flex align-items-center">
                              <i class="bi bi-calendar-range me-2 text-secondary"></i> Theo thời gian
                          </a>
                      </li>
                      <li class="list-group-item border-0">
                          <a href="/Admin/ThongKeTheoMay" class="submenu-link text-decoration-none d-flex align-items-center">
                              <i class="bi bi-laptop me-2 text-secondary"></i> Theo máy
                          </a>
                      </li>
                  </ul>
              </li>
          </ul>
        </div>
        
                <!-- Nội dung chính -->
        <div class="col-md-9">
            <div class="container mt-4">
                <div class="row g-4">
                    <!-- Hàng 1 -->
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Khách hàng</h5>
                                <p class="card-text fs-4 fw-bold">@Model.SoNguoiDung</p>
                            </div>
                        </div>
                    </div>
        
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title text-success">Quản trị viên</h5>
                                <p class="card-text fs-4 fw-bold">@Model.SoQuanTriVien</p>
                            </div>
                        </div>
                    </div>
        
                    <!-- Hàng 2 -->
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Máy tính</h5>
                                <p class="card-text fs-4 fw-bold">@Model.SoMayTinh</p>
                            </div>
                        </div>
                    </div>
        
                    <div class="col-md-6">
                        <div class="card text-center shadow-sm border-0 rounded-3">
                            <div class="card-body">
                                <h5 class="card-title text-danger">Doanh thu</h5>
                                <p class="card-text fs-4 fw-bold">@Math.Round(Model.TongDoanhThu, 0) VNĐ</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>